<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.ycuwq.todo.view.tasks.TasksViewModel"/>
        <variable
            name="fragment"
            type="com.ycuwq.todo.view.tasks.TasksFragment"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.tasks.TasksActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yangchen.extracalendarview.ExtraCalendarView
            android:id="@+id/extraCalendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:clickBackground="@drawable/click_bg"
            android:addStatesFromChildren="true"
            app:calendarType="week"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:background="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.yangchen.extracalendarview.behavior.InCalendarBottomBehavior"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_task"
            app:fabSize="normal"
            android:backgroundTint="@color/colorPrimary"
            app:rippleColor="@color/colorPrimary"
            app:borderWidth="0dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_action_add"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_gravity="end|bottom"/>
    </android.support.design.widget.CoordinatorLayout>


</layout>