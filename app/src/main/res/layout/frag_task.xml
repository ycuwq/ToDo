<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.ycuwq.todo.task.TaskViewModel"/>
        <variable
            name="fragment"
            type="com.ycuwq.todo.task.TaskFragment"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yangchen.extracalendarview.ExtraCalendarView
            android:id="@+id/extraCalendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="true"
            app:calendarType="month"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.yangchen.extracalendarview.behavior.InCalendarBottomBehavior"/>
    </android.support.design.widget.CoordinatorLayout>


</layout>