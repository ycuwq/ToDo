<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:background="@color/layoutBg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_dialog_choose_date_title"
        android:gravity="center"
        android:text="@string/choose_date"
        android:textStyle="bold"
        android:textSize="12sp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:padding="4dp"
        android:textSize="12sp"
        android:id="@+id/tv_dialog_choose_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.ycuwq.datepicker.date.DatePicker
        android:id="@+id/picker_dialog_choose_date"
        app:itemTextSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:padding="16dp"
            android:id="@+id/btn_dialog_choose_date_cancel"
            android:background="#f7f7f7"
            android:text="@string/cancel"
            android:textSize="12sp"
            android:textColor="@color/com_ycuwq_datepicker_selectedTextColor"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@color/divider"
            android:layout_width="1px"
            android:layout_height="match_parent" />
        <Button
            android:padding="16dp"
            android:id="@+id/btn_dialog_choose_date_decide"
            android:background="#f7f7f7"
            android:text="@string/decide"
            android:textSize="12sp"
            android:textColor="@color/com_ycuwq_datepicker_selectedTextColor"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>